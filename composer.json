{
    "name": "myonlinestore/react-renderer",
    "description": "Client and Server-side React rendering",
    "type": "library",
    "keywords": ["react", "reactjs", "isomorphic", "twig"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nacho Martin",
            "email": "nacho@limenius.com"
        },
        {
            "name": "Jip Moors",
            "email": "jipmoors@myonlinestore.com"
        }
    ],
    "autoload": {
        "psr-4": { "MyOnlineStore\\ReactRenderer\\": "src/MyOnlineStore/ReactRenderer"}
    },
    "scripts": {
        "cs": "@php vendor/bin/phpcs -s",
        "lint": "@php ./vendor/php-parallel-lint/php-parallel-lint/parallel-lint . -e php --show-deprecated --exclude vendor --exclude .git"
    },
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "twig/twig": "^2.4|^3.0",
        "psr/cache": "^3.0",
        "symfony/http-foundation": "^6.3"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "^3.0",
        "phpcompatibility/php-compatibility": "^9.0",
        "dealerdirect/phpcodesniffer-composer-installer": "v1.0.0",
        "phpstan/phpstan": "^1.10",
        "php-parallel-lint/php-parallel-lint": "^1.3"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
